@model CoursesApp.Models.LoginViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/css/user-style.css" rel="stylesheet" />


<div class="container">
    <div class="row d-flex justify-content-center mt-5">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card py-3 px-2">
                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ReturnUrl)
                    <div class="division">
                        <div class="row">
                            <div class="col-3"><div class="line l"></div></div>
                            <div class="col-6"><span>Login</span></div>
                            <div class="col-3"><div class="line r"></div></div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                        </div>
                        <div class="col-md-6 col-12 bn">@Html.ActionLink("Register Here", "Register", "Account", null, new { style = "color: #57557A" } )</div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" name="submit" class="btn btn-block btn-primary btn-lg" value="Login"/>
                    </div>
                }
            </div>

            @if (Model != null && !string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger">
                    @Model.Message
                </div>
            }
        </div>
    </div>
</div>